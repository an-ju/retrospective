<div class="max-w-lg shadow-lg mb-10 rounded">
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2"><%= waste_type.humanize %></div>
    <p>Rating: <%= rating_sum(items) %></p>
    <%- issues(items).each do |issue, cnt| %>
      <p class="text-grey-darker text-base mb-3">
        <%= "#{issue}: #{cnt}" %>
      </p>
    <% end %>
  </div>
  <div class="px-4 pb-5">
    <%= button_to 'Review', reflect_wastes_path(waste_type), method: :get, class: 'font-bold py-2 px-4 rounded bg-blue text-white hover:bg-blue-dark' %>
  </div>
</div>