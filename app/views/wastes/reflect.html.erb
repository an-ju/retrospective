<div class="text-bold text-xl py-3 px-3"><%= @waste_type.humanize %></div>
<%- @wastes.sort_by(&:rating).reverse.each do |waste| %>
  <div class="py-5 my-2 mx-1 rounded-sm border-2 max-w-lg flex">
    <div class="w-3/4">
      <%- waste.issues.each do |issue| %>
        <p class="px-5 py-2 text-grey-darker"><%= issue %></p>
      <% end %>
    </div>
    <div class="w-1/4 text-center p-5">
      <span class="text-2xl text-blue"><%= waste.rating %></span>
    </div>
  </div>
<% end %>

<%= content_tag 'action_item_form' %>

<%= link_to 'Back', wastes_path %>
