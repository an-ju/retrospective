<p id="notice"><%= notice %></p>

<h1>Wastes</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Content</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wastes.each do |waste| %>
      <tr>
        <td><%= waste.type %></td>
        <td><%= waste.content %></td>
        <td><%= waste.rating %></td>
        <td><%= link_to 'Show', waste %></td>
        <td><%= link_to 'Edit', edit_waste_path(waste) %></td>
        <td><%= link_to 'Destroy', waste, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

